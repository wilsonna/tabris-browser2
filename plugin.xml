<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.eclipsesource.tabris.browser2"
        version="1.0.0">

    <name>Tabris.js Custom WebView Widget</name>

    <description>A custom web view widget for Tabris.js which givees access to cookies</description>

    <author>EclipseSource</author>

    <!-- cordova -->
    <engines>
        <engine name="cordova" version=">=3.8.0" />
    </engines>

    <js-module src="www/browser2.js" name="browser2">
      <runs />
    </js-module>

    <platform name="android">

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data
              android:name="com.eclipsesource.tabris.android.OPERATOR.com.eclipsesource.tabris.browser2"
              android:value="com.eclipsesource.tabris.browser2.Browser2Operator" />
        </config-file>

        <source-file src="src/android/com/eclipsesource/tabris/browser2/Browser2Operator.java"
          target-dir="src/com/eclipsesource/tabris/browser2" />
        <source-file src="src/android/com/eclipsesource/tabris/browser2/Browser2PropertyHandler.java"
          target-dir="src/com/eclipsesource/tabris/browser2" />

    </platform>

</plugin>
